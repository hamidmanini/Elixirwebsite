mixin YoutubeBackground
	+Section({
		image: 'https://img.youtube.com/vi/hPCotoawhk0/maxresdefault.jpg', 
		youtube: {
			videoId : 'hPCotoawhk0',
			startSeconds : 0,
			endSeconds : 245  
		}
	})(data-zanim-timeline!={} data-zanim-trigger="scroll").p-0
		.row.min-vh-100.py-8.align-items-center(data-inertia!={weight: 1.5})
			.col-sm-9.col-lg-8
				.overflow-hidden
					h1.fs-4.fs-md-5(data-zanim-xs!={delay:0.5}) Expert Consultants
				.overflow-hidden
					p.text-primary.mt-4.mb-5.fs-1.fs-md-2.lh-xs(data-zanim-xs!={delay:0.6}) Over 10 years of experience in helping clients finding comprehensive solutions.
				.overflow-hidden
					div(data-zanim-xs!={delay: 0.7})
						a(href="#!").btn.btn-primary.me-3.mt-3 Read more
							span.fas.fa-chevron-right.ms-2
						a(href=`${CWD}contact.html`).btn.btn-warning.mt-3 Contact us
							span.fas.fa-chevron-right.ms-2